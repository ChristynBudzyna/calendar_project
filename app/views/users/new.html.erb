<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <p><%=pluralize(@user.errors.count, "error") %> prevented this post from saving.</p>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>

  <%end%>

  <p>
    <%=f.label :email %><br>
    <%=f.text_field :email %>
  </p>
  <p>
    <%=f.label :password %><br>
    <%=f.password_field :password %>
  </p>
  <p>
    <%=f.label :role %><br>
    <%= f.select :role, ['Director', 'Actor', 'Playwright', 'Composer', 'Lyricist', 'Librettist', 'Designer','Stage Manager', 'Theatre Administrator', 'Producer', 'Other']%>
  </p>
    <p>
    <%=f.hidden_field :admin?, :value => false %>
  </p>
   <p>
    <%=f.submit "Sign Up" %>
  </p>
<% end %>